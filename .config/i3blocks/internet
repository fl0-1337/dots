#!/bin/sh

update() {
    sum=0
    for arg; do
        read -r i < "$arg"
        sum=$(( sum + i ))
    done
    cache=${XDG_CACHE_HOME:-$HOME/.cache}/${1##*/}
    [ -f "$cache" ] && read -r old < "$cache" || old=0
    printf %d\\n "$sum" > "$cache"
    printf %d\\n $(( sum - old ))
}

[ $BLOCK_BUTTON = "1" ] && st -e nmtui

	[ "$(cat /sys/class/net/w*/operstate)" = 'down' ] && wifiicon="ğŸ“¡" ||
		wifiicon=$(grep "^\s*w" /proc/net/wireless | awk '{ print "ğŸ“¶", int($3 * 100 / 70) "%" }')

	printf "%s %s" "$wifiicon" "$(sed "s/down/â/;s/up/ğŸŒ/" /sys/class/net/enp*/operstate)"


rx=$(update /sys/class/net/[ew]*/statistics/rx_bytes)
tx=$(update /sys/class/net/[ew]*/statistics/tx_bytes)

printf " ğŸ”»%sB ğŸ”º%sB\\n" $(numfmt --to=iec $rx) $(numfmt --to=iec $tx)
